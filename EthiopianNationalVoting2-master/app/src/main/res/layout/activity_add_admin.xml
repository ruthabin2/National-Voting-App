<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_admin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

        <EditText
            android:id="@+id/et_admin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="User Name"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="DuplicateClickableBoundsCheck" />

        <EditText
            android:id="@+id/et_admin_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:minHeight="48dp" />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="Role"
            android:layout_marginTop="139dp"
            android:layout_marginStart="16dp"
            android:textSize="18dp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:orientation="horizontal"
            android:layout_marginTop="75dp"
            android:id="@+id/lio">
            <CheckBox
                android:id="@+id/checkbox_add"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_admin_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Add" />
            <CheckBox
                android:id="@+id/checkbox_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_admin_name"
                android:layout_marginStart="6dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="edit" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:orientation="horizontal"
            android:id="@+id/lio1"
            android:layout_marginTop="75dp">
            <CheckBox
                android:id="@+id/checkbox_delete"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_below="@id/et_admin_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Delete" />
            <CheckBox
                android:id="@+id/checkbox_notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_admin_name"
                android:layout_marginStart="16dp"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="Notify" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_add_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lio1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Add Admin" />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>